h1 New User

form(method="POST", action="/users", class="form-horizontal")
  div(class="control-group")
    label(class="control-label", for="username") Username
    div(class="controls")
      input#username(type="text", placeholder="Username", name="username")
  div(class="control-group")
    label(class="control-label", for="name") Name
    div(class="controls")
      input#name(type="text", placeholder="Name", name="name")
  div(class="control-group")
    label(class="control-label", for="password") Password
    div(class="controls")
      input#password(type="password", placeholder="Password", name="password")
  div(class="control-group")
    label(class="control-label", for="bio") Bio
    div(class="controls")
      textarea#bio(placeholder="Bio", name="bio")
  div(class="control-group")
    div(class="controls")
      button(type="submit", class="btn") Create




